{% extends 'layout/card-center.html.twig' %}

{% block title %}connexion{% endblock %}

{% block content %}
    <h1>Connexion</h1>
    <p>Entrez vos identifiants ci-dessous.</p>
    {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}
    <form action="{{ path('login') }}" method="post">
        <div class="mb-3">
            <label class="form-label" for="username">Email</label>
            <input class="form-control" type="email" id="username" name="_username"
                   value="{{ last_username }}"/>
        </div>
        <div class=" mb-3">

            <label class="form-label" for="password">Mot de passe</label>
            <div class="input-group">
                <input class="form-control" type="password" id="password" name="_password"/>
                <button class="btn btn-outline-primary" type="button" data-toggle-password="#password">
                    <i class="bi bi-eye-fill d-none" data-eye="show"></i>
                    <i class="bi bi-eye-slash-fill" data-eye="slash"></i>
                </button>
            </div>
        </div>
        <div class="d-flex mb-3">

            <div class="">
                <input type="checkbox" id="remember_me" name="_remember_me" checked/>
                <label for="remember_me">Rester connecté</label>
            </div>
            <div class="ms-auto">
                <a href="{{ path('app_forgot_password_request') }}">Mot de passe oublié</a>
            </div>
        </div>
        {# If you want to control the URL the user is redirected to on success #}
        <input type="hidden" name="_target_path" value="{{ path('user_account') }}"/>
        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

        <button class="btn btn-primary" type="submit">Connexion</button>
    </form>
{% endblock %}
