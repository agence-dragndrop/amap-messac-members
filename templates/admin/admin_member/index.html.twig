{% extends 'admin/base.html.twig' %}

{% block title %}Member index{% endblock %}

{% block body %}
    <h1>Member index</h1>
    {{ form(form) }}
    {{ members|length }}
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>IsActive</th>
                <th>Email</th>
                <th>FirstName</th>
                <th>LastName</th>
                <th>Phone 1</th>
                <th>Mobile 1</th>
                <th>Group</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for member in members %}
            <tr>
                <td>{{ member.id }}</td>
                <td>{{ member.isActive ? 'Yes' : 'No' }}</td>
                <td>{{ member.email }}</td>
                <td>{{ member.firstName }}</td>
                <td>{{ member.lastName }}</td>
                <td>{{ member.phone1 }}</td>
                <td>{{ member.mobile1 }}</td>
                <td>{% for group in member.groups %}
                    {{ group.name }}
                    {% endfor %}</td>
                <td>
                    <a href="{{ path('admin_member_show', {'id': member.id}) }}">show</a>
                    <a href="{{ path('admin_member_edit', {'id': member.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('admin_member_new') }}">Create new</a>
{% endblock %}
