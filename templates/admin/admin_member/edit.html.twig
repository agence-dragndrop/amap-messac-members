{% extends 'admin/_layout/row-2cols.html.twig' %}

{% block title %}Edit Member{% endblock %}


{% block blockLeft %}
    {% include 'admin/_include/previous-btn.html.twig' with {'link': path('admin_member_index')} %}
    <h1>{{ member.firstName }} {{ member.lastName }}</h1>
    {% if member.user %}
        <a href="{{ path('admin_user_edit', {'id': member.user.id}) }}">Voir le compte utilisateur</a>
    {% else %}
        <p class="">
            <i class="bi "></i>
            Cet adhérent n'a pas encore de compte sur cette interface.
        </p>
    {% endif %}
{% endblock %}
{% block blockRight %}
    <div class="mb-2">
        {{ include('admin/admin_member/_form.html.twig', {'button_label': 'Mettre à jour'}) }}
    </div>
    {{ include('admin/admin_member/_delete_form.html.twig') }}
{% endblock %}


{% block content %}

{% endblock %}
