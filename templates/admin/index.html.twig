{% extends 'admin/base.html.twig' %}

{% block title %}Administration du site{% endblock %}

{% block body %}
<div class="bg-light p-4 mb-4 text-center">
    <h1>Bienvenue sur votre interface de gestion</h1>
    <p>Accédez directement aux pages d'administration grâce aux liens ci-dessous.</p>
</div>
<div class="grid-wrapper">
    {% set links = [
        {'title': 'Commandes', 'path': 'admin_order_index'},
        {'title': 'Adhérents', 'path': 'admin_member_index'},
        {'title': 'Comptes', 'path': 'admin_user_index'},
    ] %}
    {% for link in links %}
    <div class="">
        <a href="{{ path(link.path) }}" class="btn btn-primary d-block p-4 text-uppercase">{{ link.title }}</a>
    </div>
    {% endfor %}
</div>
{% endblock %}
